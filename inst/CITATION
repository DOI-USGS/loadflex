# CITATION

citHeader("To cite package 'loadflex' in publications use:") 

## R >= 2.8.0 passes package metadata to citation(). 
if(!exists("meta") || is.null(meta)) meta <- packageDescription("heplots") 
year <- sub("-.*", "", meta$Date) 
note <- sprintf("R package version %s", meta$Version) 

citEntry(entry = "Manual",
  title = "{loadflex}: Models and Tools for Watershed Flux Estimates", 
  author = personList(as.person("Alison P. Appling"), 
                      as.person("Miguel C. Leon"), 
                      as.person("William H. McDowell")), 
  year = year, 
  note = note, 
  url = "https://github.com/McDowellLab/loadflex", 

  textVersion = 
  paste("Alison P. Appling, Miguel C. Leon, and William H. McDowell", 
        sprintf("(%s).", year), 
        "loadflex: Models and Tools for Watershed Flux Estimates.", 
        paste(note, ".", sep = ""), 
        "https://github.com/McDowellLab/loadflex.") 
)

citEntry(entry = "Article",
  title = "Reducing bias and quantifying uncertainty in watershed flux estimates: The R package loadflex", 
  author = personList(as.person("Alison P. Appling"), 
                      as.person("Miguel C. Leon"), 
                      as.person("William H. McDowell")), 
  year = "TBD (In review)", 
  journal = "TBD (In review)",
  volume = "TBD",
  number = "TBD",
  pages = "TBD-TBD",
 
  textVersion = "Alison P. Appling, Miguel C. Leon, and William H. McDowell (In review).
    Reducing bias and quantifying uncertainty in watershed flux estimates: The R package loadflex." 
)


